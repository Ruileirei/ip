<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<fx:root type="HBox"
         xmlns:fx="http://javafx.com/fxml"
         alignment="TOP_RIGHT"
         spacing="10.0"
         style="-fx-padding: 10;">
    <children>
        <!-- Profile image (circular) -->
        <StackPane>
            <ImageView fx:id="displayPicture"
                       fitHeight="60.0"
                       fitWidth="60.0" />
        </StackPane>

        <!-- Chat bubble -->
        <Label fx:id="dialog"
               wrapText="true"
               style="-fx-background-color: #b3e5fc; -fx-padding: 10; -fx-background-radius: 15;"
               maxWidth="250.0" />
    </children>
</fx:root>

